<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityItem"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/activity_item_spinner_imagenes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Spinner>

    <EditText
        android:id="@+id/activity_item_edit_text_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/activity_item_spinner_categorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Spinner>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_item_spinner_tiendas">

    </Spinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_item_button_guardar"
        android:text="Guardar"/>

</LinearLayout>